# ===== window focus (alt) =====

alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# ===== window swap (alt + shift) =====

alt + shift - h : yabai -m window --swap west
alt + shift - j : yabai -m window --swap south
alt + shift - k : yabai -m window --swap north
alt + shift - l : yabai -m window --swap east

# ===== window resize (alt + shift + =/-) =====

alt + shift - 0x18 : ~/.config/skhd/helpers/resize.sh grow
alt + shift - 0x1B : ~/.config/skhd/helpers/resize.sh shrink

# ===== layout (alt + shift) =====

alt + shift - r : yabai -m space --rotate 270
alt + shift - t : yabai -m window --toggle float --grid 4:4:1:1:2:2; sketchybar --trigger window_focus
alt + shift - e : yabai -m space --balance

# ===== window state (cmd) =====

alt + shift - f : yabai -m window --toggle zoom-fullscreen; sketchybar --trigger window_focus
alt - return : yabai -m window --toggle native-fullscreen
# cmd - e : ~/.config/skhd/helpers/toggle_minimize.sh

# ===== stack mode =====

:: stack @

alt - s ; stack : yabai -m space --layout stack
stack < j : yabai -m window --focus stack.next || yabai -m window --focus stack.first
stack < k : yabai -m window --focus stack.prev || yabai -m window --focus stack.last
stack < escape ; default : yabai -m space --layout bsp
stack < return ; default

# ===== workspace navigation (ctrl + arrows) =====

ctrl - right : yabai -m space --focus next || yabai -m space --focus first
ctrl - left : yabai -m space --focus prev || yabai -m space --focus last

# ===== focus space (ctrl + #) =====

alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9

# ===== move window to space (alt + shift + #) =====

alt + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
alt + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
alt + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
alt + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4
alt + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5
alt + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6
alt + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7
alt + shift - 8 : yabai -m window --space 8; yabai -m space --focus 8
alt + shift - 9 : yabai -m window --space 9; yabai -m space --focus 9

# ===== space management =====

alt - 0x21 : yabai -m space --destroy && sketchybar --trigger space_change
alt - 0x1E : yabai -m space --create && sketchybar --trigger space_change && yabai -m space --focus last
alt + shift - 0x1E : yabai -m space --create && yabai -m window --space last && sketchybar --trigger space_change && yabai -m space --focus last
alt + shift - 0x21 : yabai -m space --destroy && yabai -m window --space last && sketchybar --trigger space_change && yabai -m space --focus last

# ===== service =====

ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
